{
  "name": "chiyanote",
  "version": "v1.2.3",
  "description": "",
  "main": "index.js",
  "build": {
    "appId": "strelka.electron.chiyanote.app",
    "files": [
      "API/*",
      "icon/*",
      "library/*",
      "library/jexcel/*",
      "library/mousetrap/*",
      "Licenses/*",
      "Licenses/Licenses/*",
      "ImageEditor/*",
      "scripts/*",
      "index.html",
      "index.js",
      "note.html",
      "index.css",
      "render_setting.js",
      "render.js",
      "setting.css"
    ],
    "mac": {
      "target": "dmg",
      "icon": "icon/app.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon/app.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon/app.png"
    }
  },
  "scripts": {
    "start": "npx electron .",
    "license": "yarn licenses generate-disclaimer>Licenses/nodeLicenses&&node license.js"
  },
  "author": "strelka",
  "license": "MIT",
  "devDependencies": {
    "@calumk/editorjs-codeflask": "^1.0.9",
    "@editorjs/checklist": "^1.5.0",
    "@editorjs/editorjs": "^2.28.2",
    "@editorjs/header": "^2.7.0",
    "@editorjs/nested-list": "^1.3.0",
    "@editorjs/quote": "^2.5.0",
    "@editorjs/table": "^2.2.2",
    "editorjs-undo": "^2.0.26",
    "electron": "^27.0.3",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "sqlite3": "^5.1.6"
  }
}
